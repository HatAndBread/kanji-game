  const tools = document.getElementById('tools');
  const burger = document.getElementById('big-mac');
  const toolsCloser = document.getElementById('tools-closer');
  burger.addEventListener('click', () => {
    if (!toolsOut) {
      tools.style.right = '0px';
      toolsOut = true;
    } else {
